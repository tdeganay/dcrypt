<script src="https://cdn.jsdelivr.net/jquery/2.2.3/jquery.min.js"></script>

<div class="blue-background row d-flex align-items-center">
  <div class="col-sm-12 col-md-4 col-lg-4">
    <div class="container p-5">
      <p style="color: white !important;" class="back-link">
        <i class="far fa-arrow-left"></i>
        <%= link_to 'Back to the dashboard', :back %>
      </p>
      <h1 style="color: white;" class="mb-5">Add a new Crypto Trend block to my Dashboard</h1>
      <h3 style="color: white !important;" class="mb-5">Follow your key figures to know your next move</h3>
      <%= simple_form_for([@dashboard, @messari_block], html: { class: "searchbox", data: {controller: "search-crypto"}}) do |f| %>
        <div role="search" class="searchbox__wrapper">
        <%= f.hidden_field :position, value: params[:number] %>
        <%= f.input :user_string, label: "Please input what you are looking for", class:"form-control searchbox__input", input_html: { data: { search_crypto_target: "searchInput"}}, autocomplete:"on", required:"required", placeholder:"Search for a crypto currency", id:"search-input"%>
        <%= f.button :submit, "Add a trend block", class:"primary-button searchbox__submit mt-2"%>
        </div>
      <% end %>
      <div class="svg-icons" style="height: 0; width: 0; position: absolute; visibility: hidden">
        <svg xmlns="http://www.w3.org/2000/svg">
          <symbol id="sbx-icon-clear-3" viewBox="0 0 40 40"><path d="M16.228 20L1.886 5.657 0 3.772 3.772 0l1.885 1.886L20 16.228 34.343 1.886 36.228 0 40 3.772l-1.886 1.885L23.772 20l14.342 14.343L40 36.228 36.228 40l-1.885-1.886L20 23.772 5.657 38.114 3.772 40 0 36.228l1.886-1.885L16.228 20z" fill-rule="evenodd"/></symbol>
          <symbol id="sbx-icon-search-13" viewBox="0 0 40 40"><path d="M26.806 29.012a16.312 16.312 0 0 1-10.427 3.746C7.332 32.758 0 25.425 0 16.378 0 7.334 7.333 0 16.38 0c9.045 0 16.378 7.333 16.378 16.38 0 3.96-1.406 7.593-3.746 10.426L39.547 37.34c.607.608.61 1.59-.004 2.203a1.56 1.56 0 0 1-2.202.004L26.807 29.012zm-10.427.627c7.322 0 13.26-5.938 13.26-13.26 0-7.324-5.938-13.26-13.26-13.26-7.324 0-13.26 5.936-13.26 13.26 0 7.322 5.936 13.26 13.26 13.26z" fill-rule="evenodd"/></symbol>
        </svg>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-8 col-lg-8 new-image">
  </div>
</div>
